from conans import ConanFile, CMake
   
class httpPoco(ConanFile):
    name = "httpPOCO"
    version = "0.1"
    license="MIT"
    settings = "os", "compiler", "build_type", "arch"
    url = "https://github.com/carpajr/poco-http.git"

    def source(self):
        self.run("git clone https://github.com/carpajr/poco-http.git")

    def build(self):
        cmake = CMake(self)
        self.run('cd poco-http && cmake . %s' % cmake.command_line)
        self.run("cd poco-http && cmake --build . %s" % cmake.build_config)

    def package(self):
        self.copy("*.h", dst="include", src="poco-http")
        self.copy("*.lib", dst="lib", src="poco-http/lib")
        self.copy("*.a", dst="lib", src="poco-http/lib")

    def package_info(self):
        self.cpp_info.libs = ["poco-http"]
